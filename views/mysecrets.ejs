<%- include('partials/header') %>

<div class="text-center" style="padding-top: 10px;">
  <div class="jumbotron container">
    <i class="fas fa-key fa-6x"></i>
    <h1>YOUR SECRETS! SHHHH!</h1>
    <% if(mySecrets.length === 0){ %>
        <div class="alert alert-dark" role="alert">
            Looks like you haven't shared your secrets yet!
        </div>
    <% } %>
    <% mySecrets.forEach(function(item){ %>
      <p class="secret-text"><%=item.secretPost %></p>
    <% }) %>
    
    <hr>
    
    
    <a class="btn btn-dark" href="/submit" role="button">Submit a Secret</a>
  </div>


<%- include('partials/footer') %>

